@* @model int *@
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f7f7f7;
        margin: 0;
        padding: 0;
    }
    form {
        margin-top: 200px;
        padding-top: 100px;
    }
    h1 {
        text-align: center;
        margin-top: 20px;
    }
    #inputForm {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }    
    #inputQuestion {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }
    select,
    input[type="file"], input[type="text"] {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
        transition: border-color 0.3s ease-in-out;
    }
    select:focus,
    input[type="file"]:focus,
    input[type="text"]:focus {
        border-color: #007BFF;
    }
    button {
        background-color: #007BFF;
        color: #fff;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 5px;
    }
    button:hover {
        background-color: #0056b3;
    }
    label {
        display: block;
        margin-bottom: 10px;
        font-weight: bold;
    }
</style>
<br>
<br>
<div>
    <form id="inputForm" action="@Url.Action("insertCandidat_diplome","Candidat")" method="post"enctype="multipart/form-data">
        <div id="inputQuestion">
            <input type="hidden" name="id_c" value="@ViewBag.Data">
        </div><br>
        <div id="inputQuestion">
            <input type="hidden" name="n" value="@ViewBag.N">
        </div><br>
        <label for="">Niveau d'Ã©tude</label>
            <div id="inputQuestion">
                <select name="niveau" id="">
                    <option value="CEPE">CEPE</option>
                    <option value="BEPC">BEPC</option>
                    <option value="BACC">BACC</option>
                    <option value="LICENSE">LICENSE</option>
                    <option value="MASTER">MASTER</option>
                </select>
            </div><br>
        <label for="">Diplome</label>
            <div id="inputQuestion">
                <input type="file" name="diplome" id="">
            </div><br>
        <label for="">Cv</label>
            <div id="inputQuestion">
                <input type="file" name="cv" id="">
            </div><br>
        <label for="">Lettre de motivation</label>
            <div id="inputQuestion">
                <input type="file" name="lm" id="">
            </div><br>
        <label for="">Experience</label>
            <div id="inputQuestion">
                <input type="text" name="experience" id="">
            </div><br>
        <button type="submit" value="Valider">valider</button>
    </form>
</div>