@model List<String>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f7f7f7;
        margin: 0;
        padding: 0;
    }
    form {
        margin-top: 200px;
        padding-top: 100px;
    }
    h1 {
        text-align: center;
        margin-top: 20px;
    }
    #inputForm {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }
    #inputQuestion {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }
    select,
    input[type="file"],
    input[type="date"],
    input[type="text"] {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
        transition: border-color 0.3s ease-in-out;
    }
    select:focus,
    input[type="file"]:focus,
    input[type="date"]:focus,
    input[type="text"]:focus {
        border-color: #007BFF;
    }
    button {
        background-color: #007BFF;
        color: #fff;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 5px;
    }
    button:hover {
        background-color: #0056b3;
    }
    label {
        display: block;
        margin-bottom: 10px;
        font-weight: bold;
    }
</style>

<div>
    <h1> Besoins </h1>
        <form id="inputForm" method="post" action="@Url.Action("ValiderListe1","Service_Poste")">
            <input type="hidden" name="nom_service" value="@ViewBag.Nom">
        <label for="">Valeur horaire</label>
            <div id="inputQuestion">
                <input type="text" name="heure">
            </div><br>
        <label for="">Postes</label>
            <div id="inputQuestion">
                <select name="nom_poste">
                    @foreach (var nom in Model)
                    {
                    <option>@nom</option>
                    }
                </select>
            </div><br>
        <label for="">Diplome</label>
            <div id="inputQuestion">
                <select name="diplome">
                    <option value="CEPE">CEPE</option>
                    <option value="BEPC">BEPC</option>
                    <option value="BACC">BACC</option>
                    <option value="LICENSE">LICENSE</option>
                    <option value="MASTER">MASTER</option>
                </select>
            </div><br>
        <label for="">Sexe</label>
            <div id="inputQuestion">
                <select name="sexe">
                    <option value="Homme">Homme</option>
                    <option value="Femme">Femme</option>
                    <option value="Homme/Femme">Homme/Femme</option>
                </select>
            </div><br>
        <label for="">Age entre</label>
            <div id="inputQuestion">
                <p>
                    <input type="text" name="d_debut" style="width: 50px;"> et 
                    <input type="text" name="d_fin" style="width: 50px;">
                </p>
            </div><br>
        <label for="">Lieu</label>
            <div id="inputQuestion">
                <select name="lieu">
                    <option value="Antananarivo">Antananarivo</option>
                    <option value="Toamasina">Toamasina</option>
                    <option value="Mahajanga">Mahajanga</option>
                    <option value="Toliara">Toliara</option>
                    <option value="Antsiranana">Antsiranana</option>
                    <option value="Fianarantsoa">Fianarantsoa</option>
                </select>
            </div><br>
        <button type="submit" value="Valider">valider</button>
    </form>
</div>
