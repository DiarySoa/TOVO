@model List<String>
<style>
    body {
        font-family: Arial, sans-serif;
    }

    div {
        margin: 20px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    label {
        display: block;
        margin-bottom: 10px;
        font-weight: bold;
    }

    select,
    input[type="file"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type="file"] {
        cursor: pointer;
    }

    select:hover,
    input[type="file"]:hover {
        border-color: #333;
    }

    select:focus,
    input[type="file"]:focus {
        outline: none;
        border-color: #007bff;
    }

    @* //////////////////////////////////////////// *@select,
    input[type="text"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type="text"] {
        cursor: pointer;
    }

    select:hover,
    input[type="text"]:hover {
        border-color: #333;
    }

    select:focus,
    input[type="text"]:focus {
        outline: none;
        border-color: #007bff;
    }
    @* ////////////////////////////////////////////////////////// *@
    input[type="date"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type="date"] {
        cursor: pointer;
    }

    select:hover,
    input[type="date"]:hover {
        border-color: #333;
    }

    select:focus,
    input[type="date"]:focus {
        outline: none;
        border-color: #007bff;
    }

    /* Style the submit button if you have one */
    button[type="submit"] {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    button[type="submit"]:hover {
        background-color: #0056b3;
    }
</style>

<div>
<h1>
    <center>Besoins</center>
</h1>

<form method="post" action="@Url.Action("ValiderListe1","Service_Poste")">
        <input type="hidden" name="nom_service" value="@ViewBag.Nom">
<p>Valeur horaire <input type="text" name="heure"></p>

<p>Postes
    <select name="nom_poste">
        @foreach (var nom in Model)
        {
        <option>@nom</option>
        }
    </select>
</p>

<p>Diplome
    <select name="diplome">
        <option value="CEPE">CEPE</option>
        <option value="BEPC">BEPC</option>
        <option value="BACC">BACC</option>
        <option value="LICENSE">LICENSE</option>
        <option value="MASTER">MASTER</option>
    </select>
</p>
<p>Sexe 
    <select name="sexe">
        <option value="Homme">Homme</option>
        <option value="Femme">Femme</option>
        <option value="Homme/Femme">Homme/Femme</option>
    </select>
</p>
    <p>Age entre <input type="text" name="d_debut" style="width: 50px;"> et <input type=" text" name="d_fin"
                style="width: 50px;"></p>
<p>Lieu 
    <select name="lieu">
        <option value="Antananarivo">Antananarivo</option>
        <option value="Toamasina">Toamasina</option>
        <option value="Mahajanga">Mahajanga</option>
        <option value="Toliara">Toliara</option>
        <option value="Antsiranana">Antsiranana</option>
        <option value="Fianarantsoa">Fianarantsoa</option>
    </select>
</p>
<button type="submit" value="Valider">valider</button>

</form>
</div>
